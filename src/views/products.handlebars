<div>
    <form style="float:right" method="POST" action="/api/sessions/logout">
        <button type="submit">Cerrar Sesi칩n</button>
    </form>
    <h2>Listado de Productos</h2>

    <h5 style="text-align:right" >Bienvenido {{user.name}},  (Rol:{{#if user.role }} {{user.role}} {{else}} usuario{{/if}}) {{user.email}}</h5>
    
    <!--<div>
        <h1>ChatBox </h1>
        <input id="chatBox">   
        <p id="messageLogs">
        </p>
        
    </div>-->
    <input type="hidden" value="{{cartId}}" name="cartId" id="cartId">
    <table id="listTable">
        <tr>
            <th>ID</th>
            <th>Titulo</th>
            <th>Descripci칩n</th>
            <th>C칩digo</th>
            <th>Precio</th>
            <th>Estatus</th>
            <th>Stock</th>
            <th>Categoria</th>
            <th>Imagenes</th>
            <th>Acciones</th>
        </tr>
    {{#each payload}}
        <tr id="rowNo{{this._id}}">
            <td>{{this._id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.code}}</td>
            <td>${{this.price}}</td>
            {{#if this.status}}
                <td class="green">Activo</td>
            {{else}}
                <td class="red">Inactivo</td>
            {{/if}}
            <td>{{this.stock}}</td>
            <td>{{this.category}}</td>
            {{#if this.thumbnails.length}}
                <td>
                    {{#each this.thumbnails}}
                        {{this}}<br>
                    {{/each}}
                </td>
            {{else}}
                <td>&nbsp;</td>
            {{/if}}
            <td>
                <form class="addForm">
                    <label>Cantidad</label>
                    <input type="number" name="qty" value="1"  min="1" max="{{this.stock}}">
                    <input type="hidden" name="productId" value="{{this._id}}">
                    <button type="submit">Agregar a carrito</button>
                </form>
            </td>
        </tr>
    {{/each}}
    </table>
    <div>        
        <section class="paginacion">
			<ul>
                 {{#if  hasPrevPage}}
				<li><a href="{{prevLink}}"> Anterior</a></li>
                {{/if}}
              
				<li><a href="#" class="active">P치gina {{ page}}</a></li>
                 {{#if  hasNextPage}}
				<li><a href="{{nextLink}}" >Siguiente</a></li>
                 {{/if}}
			</ul>
		</section>
    </div>
</div>
